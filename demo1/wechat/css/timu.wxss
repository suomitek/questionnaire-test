.number-group{
  display: table;
  table-layout: fixed;
  width: 200rpx;
  text-align: center;
  border-radius: 6px;
  border: 1px solid #bbb;
  overflow: hidden;
}
.number-cell{
  display: table-cell;
  line-height: 1.7;
  border-radius: 0;
}
.number-cell button::after{
  border-bottom: none;
  border-top: none;
  border-radius: 0;
}








