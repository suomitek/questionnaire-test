/* pages/wenjuan/detailed.wxss */
@import "/css/btn.wxss";
@import "/pages/templates/question/xuanze.wxss";
@import "/pages/templates/question/wenben.wxss";
@import "/pages/templates/question/pingfen.wxss";
@import "/pages/templates/question/wenjian.wxss";
@import "/pages/templates/question/location.wxss";
page{
  /* background-color: #fff; */
  font-size: 35rpx;
  padding-bottom: 100rpx;
}
.detailed{
  width: 100vw;
}
.cover{
  width: 100vw;
  height: 40vw;
  position: relative;
}
.fengmian{
  width: 100%;
  height: 100%;
}
.xiangqin{
  position: fixed;
  top:16vw;
  right: 0;
  background-color: #1296db;
  border: 2rpx solid #fff;
  color: #fff;
  height: 40rpx;
  font-size: 30rpx;
  padding: 5rpx 20rpx;
  border-radius: 25rpx 0 0 25rpx;
  z-index: 999;
}
.info{
  width: 90vw;
  padding: 0 5vw 3vw 5vw;
  background-color: #fff;
}
.name{
  width: 100%;
  display: flex;
  align-content: center;
  justify-content: center;
  font-size: 42rpx;
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden; 
  text-overflow:ellipsis;
  padding: 35rpx 0;
}
.time{
  border-radius: 20rpx;
  padding:20rpx 20rpx;
}
.time-top,.time-bottom{
  width: 100%;
  padding: 12rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
}

.time-top{
  font-size: 36rpx;
  font-weight: 600;
}
.timets{
  font-size: 36rpx;
  color: #737373;
  margin: 0 15rpx;
}
.wentis{
  padding: 30rpx 0;
  width: 100vw;
}
.btn-group{
  position: fixed;
  bottom: 0;
  left: 0;
}
.defen{
  width: 100%;
  padding: 25rpx 0;
  display: flex;
  justify-content: center;
  
}