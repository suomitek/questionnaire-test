.commentTitle{
  margin-top: 30rpx;
  width: 90vw;
  padding:3vw 5vw 0 5vw;
  font-size: 30rpx;
  color: #939393;
  background-color: #fff;
}
.commentList{
  width: 90vw;
  padding:0  5vw 5vw 5vw; 
  
  background-color: #fff;
}
.comment{
  width: 100%;
  padding: 30rpx 0;
  border-bottom:1rpx dashed #ccc; 
}
.comment-top{
  width: 100%;
  display: flex;
  flex-flow: nowrap;
}
.comment-top-left{
  width: 85%;
  display: flex;
  flex-flow: nowrap;
  align-items: center;
}
.comment-top-left-tuoxiang{
  width: 12%;
  border-radius: 50%;
}
.comment-top-left-tuoxiang image{
  width: 100%;
  border-radius: 50%;
}
.comment-top-left-nickname{
  margin-left: 5%;
  
}
.comment-top-left-nicknam-name{
  font-size: 30rpx;
  color: #666;
}
.comment-top-left-nicknam-name .label{
  background-color: #1296db;
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 5rpx;
  margin-left: 30rpx;
}
.comment-top-left-nicknam-time{
  font-size: 25rpx;
  color: #bbb;
}
.comment-top-rigth{
  width: 15%;
  display: flex;
  justify-items: center;
  align-items: center;
  color: #939393;
}
.comment-top-rigth .zan_icon{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
.comment-bottom{
  color: #666;
  font-size: 30rpx;
  width: 90%;
  padding: 20rpx 5% 0 5%;
}

.zhanwei{
  background-color: #fff;
  width: 100vw;
  height: 120rpx
}
.meile{
  background-color: #fff;
  color:rgb(155, 150, 150);
  width: 100vw;
  font-size: 25rpx;
  display: flex;
  justify-content: center;
}


.btn-group{
  position: fixed;
  bottom: 0;
  left: 0;
  font-size: 30rpx;
  font-weight: 600;
}
.btn{
  width: 25vw;
  height: 10vw;
  margin-left: 8vw;
}