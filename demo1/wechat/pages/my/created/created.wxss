/* pages/index/index.wxss */
 @import "../../templates/votelist/votelist.wxss";
.headerTab{
  width: 100%;
  z-index:999;
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-radius: 0 0 20rpx 20rpx;
  position: fixed;
  top: 0;
}
.headerTab .title{
  height: 70rpx;
  width: 180rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  text-align: center;
  display: table;
  table-layout: fixed;
}
.headerTab .title.selected{
  border-bottom: 7rpx solid #1296db;
  font-weight: 600;
}
.list-box{
  width: 100vw;
  margin-top: 80rpx;
  padding-bottom: 20rpx;
}
.voteList{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mask {
  width: 100vw;
  height: 100vh;
  background-color:rgba(0,0,0,0.6);
  /* background-color: #fff; */
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-content: center;
  z-index:999;
  position: fixed;
  bottom: 0;
  left: 0;
  align-items: flex-end;
}
.bei{
  width: 90%;
  padding: 10rpx 5% 30rpx 5%;
  background-color: #fff;
  color: #999;
  /* position: fixed;
  bottom: 0;
  left: 0; */
}
.btn-title{
  width: 100%;
  padding: 15rpx 0;
  font-size: 29rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx dashed #777;
}
.qid{
  margin-left: 15rpx;
  font-size: 27rpx;
  color: #555;
}
.btn-btns{
  display: flex;
  flex-wrap: wrap;
  padding-top: 20rpx;
  justify-content:flex-start;
}
.btn-btn{
  margin: 20rpx 0;
  width: 22.5vw;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  /* align-items: center; */
  /* background-color: #aaa; */
}
.btn-btn image{
  width: 7vw;
  /* height: 7vw; */
  margin: 0 5vw;
}
.btn-btn view{
  margin-top: 10rpx;
  font-size: 30rpx;
}

button::after {
  border: none;
}
button {
  color: #999;
  background-color: #fff;
  padding: 0;
}
button {
  border-radius:0;
}
