.background_view{
  width: 100vw;
  height: 30vw;
  position: fixed;
  top: 0;
  left: 0;
  background: #336799;
  padding: 24rpx 0;
}
.wave{
  position: absolute;
  top: 60%;
	width: 200rpx;
	height: 200rpx;
	/* background: #336799; */
	border-radius: 50%;
}
.wave:before,.wave:after{
	content: "";
	position: absolute;
	width: 500rpx;
	height: 500rpx;
	top: 200%;
	left: 50%;
	background-color: rgba(255, 255, 255, .4);
	border-radius: 45%;
	transform: translate(-50%, -75%) rotate(0);
	animation: rotate 6s linear infinite;
}
.wave:after {
	border-radius: 47%;
	background-color: rgba(255, 255, 255, .7);
	transform: translate(-50%, -75%) rotate(0);
	animation: rotate 10s linear -5s infinite;
}
@keyframes rotate {
	50% {
		transform: translate(-50%, -73%) rotate(180deg);
	} 100% {
		transform: translate(-50%, -75%) rotate(360deg);
	}
}
