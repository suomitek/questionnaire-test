/*项目列表*/
.item_list{
    background-color: white;
    font-size: 32rpx;
    width: 100%;
    z-index: 999;
    padding: 20rpx 0;
}
.item_list_msg{
    position: relative;
    padding: 28rpx;
    display: block;
}
.list_icon{
    float: left;
    height: 100%;
    margin-right: 15rpx;
    display: flex;
    align-items: center;
}
.list_icon image{
    width: 40rpx;
    height: 40rpx;
    display: block;
}
.item_list_msg::after{
    content: ' ';
    position: absolute;
    right: 15px;
    top: 20px;
    border: #999999 solid;
    border-width: 1px 0 0 1px;
    width: 8px;
    height: 8px;
    -webkit-transform: rotate(135deg);
}
.line_x{
    width: 100%;
    border-bottom:1rpx dashed #f1f1f1;
}

.elHide{
