/* pages/my/xinxi/xinxi.wxss */
.title{
  padding: 20rpx 0;
  width: 90%;
  margin: 0 5%;
  font-size: 33rpx;
}
.infos{
  width: 90%;
  padding: 10rpx 5%;
  background-color: #fff;
}
.info{
  width: 100%;
  padding: 15rpx 0;
  border-bottom: 1rpx dashed #ccc;
  font-size: 33rpx;
  display: flex;
  align-content: center;
  flex-wrap: nowrap;
}
.info-left{
  width: 30%;
  color: #333;
  display: flex;
  align-content: center;
}
.info-rigth{
  width: 70%;
  color: #999;
   font-size: 30rpx;
  display: flex;
  align-content: center;
  justify-content: flex-end;
}
.info-rigth .icon{
  width: 15%;
  display: flex;
  align-content: center;
  justify-content: flex-end;
}
.info-rigth .icon image{
  width: 5vw;
  height: 5vw;
}
.btn-group{
  margin:40rpx 0;
  display: flex;
  justify-content: center;
}
.btnBg{
  width: 25vw;
  padding: 10rpx 0;
}