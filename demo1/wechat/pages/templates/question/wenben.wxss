/* pages/templates/question/wenben.wxss */
.timu{
  width: 90%;
  padding: 20rpx 5%;
  display: flex;
  flex-flow: nowrap;
  color: #444;
}

.bixuan{
  color: red;
}
.timucover{
  width: 90%;
  margin:0 5%;
}
.timufengmian{
  width: 100%;
  border-radius: 20rpx;
}



.xuanzeti{
  width: 100%;
  border-radius: 100prx;
  background-color: #fff;
  font-size: 30rpx;
  padding: 10rpx 0;
}
.shurukuang{
  width: 90%;
  display: flex;
  flex-wrap: nowrap;
  background-color: #f1f1f1;
  margin: 0 5%;
  padding: 15rpx 0;
  border-radius: 20rpx;
  color: #666;
}
.shurukuang-icon{
  width: 15%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.shurukuang-icon image{
  width: 40%;
}
.shurukuang-input{
  width: 85%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  font-size: 30rpx;
}
.shurukuang-input input{
  width: 100%;
  font-size: 30rpx;
}
.placeholderStyle2{
  font-size: 30rpx;
  color: #666;
}

.shurukuang textarea{
  width: 90%;
  padding: 10rpx 5%;
}
.error-msg{
  width: 90%;
  padding: 8rpx 0;
  margin: 15rpx 5% 0 5%;
  border-radius: 10rpx;
  /* border: 1rpx #ff8787 solid; */
  background-color: #fdcfcf;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:25rpx;
  color: #f00;
}