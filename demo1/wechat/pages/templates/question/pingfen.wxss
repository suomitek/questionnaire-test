/* pages/templates/question/pingfen.wxss */


.pingfen{
  width: 100%;
  border-radius: 100prx;
  background-color: #fff;
  font-size: 30rpx;
  padding: 10rpx 0;
}


.timu{
  width: 90%;
  padding: 20rpx 5%;
  display: flex;
  flex-flow: nowrap;
  color: #444;
}

.bixuan{
  color: red;
}
.timucover{
  width: 90%;
  margin:0 5%;
}
.timufengmian{
  width: 100%;
  border-radius: 20rpx;
}
.pingfen-btns{
  width: 90%;
  padding: 20rpx 0;
  margin: 0 5%;
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  background-color: #f1f1f1;
  border-radius: 20rpx;
}

.pingfen-btn{
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  /* border: 1rpx solid #1262db;
  color: #1262db; */
  border: 1rpx solid #888;
  color: #666;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  background-color: #fff;
}
.on{
  background-color: #1296db;
  color: #fff;
   border: 1rpx solid #fff;
}
.pingfen-btn:nth-child(1){
 margin-left: 0;
}
.error-msg{
  width: 90%;
  padding: 8rpx 0;
  margin: 15rpx 5% 0 5%;
  border-radius: 10rpx;
  /* border: 1rpx #ff8787 solid; */
  background-color: #fdcfcf;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:25rpx;
  color: #f00;
}
